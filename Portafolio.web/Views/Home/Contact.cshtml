﻿@{
	ViewData["Title"] = "Contacto";
}

<h1>Formulario de Contacto</h1>

<form asp-controller="Home" asp-action="Contact">
	<div class="row mb-3 ">
		<div class="col col-4">
			<label for="name" class="form-label">Nombre</label>
			<input type=text class="form-control" id="name" placeholder="Nombre" required/>
		</div>
		<div class="col col-4  mb-4">
			<label for="Email" class="form-label">Email</label>
			<input type=email class="form-control" id="Email" placeholder="Ejemplo@email.com" required/>
		</div>
		
		<div class="row ms-2 col col-8">
			<label for="Description" class="form-label">Mensaje</label>
			<textarea action="form-control" id="Description" name="Description" rows="5" placeholder="Escribe algun mensaje" required></textarea>
		</div>

	</div>

	<button type="submit" class="btn btn-success">Enviar</button>
</form>